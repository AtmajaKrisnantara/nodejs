extends layout

block content
	nav.navbar.navbar-expand-lg.navbar-light.fixed-top#mainNav
		.container
			a.navbar-brand.js-scroll-trigger(href="#page-top") Start Bootstrap 
				button.navbar-toggler.navbar-toggler-right(type="button",data-toggle="collapse",data-target="#navbarResponsive",aria-controls="navbarResponsive",aria-expanded="false",aria-label="Toggle navigation")
				| Menu
				
			i.fas.fa-bars
				.collapse.navbar-collapse#navbarResponsive
					ul.navbar-nav.ml-auto
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/") Home
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/data") Mahasiswa
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/datamakul") Mata Kuliah	
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/form") Form Mahasiswa
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/formmakul") Form Mata Kuliah
	header.masthead
		.container.d-flex.h-100.align-items-center
			.mx-auto.text-center
				h1.mx-auto.my-0.text-uppercase Data Mahasiswa
	main.container(role="main")
		.mt-3
			h1 Halaman Data
			a.btn.btn-success(type="button" aria-label="Left Align" href="/form") Tambah Data
			br
			br
			form.form-inline.mt-2.mt-md-0(method="post" action="/data/cari")
					input.form-control.mr-sm-2.col-sm-10(type="text", name="carinama"
					placeholder="Search", aria-label="Search")
					button.btn.btn-outline-success.my-6-sm-2(type="submit") Search
			br
			table.table.table-bordered
				tr 
						th No
						th Nim
						th Nama Lengkap
						th Program Studi
						th Email
						th Alamat
						th Tanggal Lahir
				for row, index in data
					tr
					td #{index+1}
					td #{row.nim}
					td #{row.namalengkap} 
					td #{row.prodi}
					td #{row.email}
					td #{row.alamat}
					td #{row.tgl_lahir}
					td
						a.btn.btn-warning(type="button" aria-label="Left Align" href="/form/edit/#{row.nim}") Edit
						br
						br
						a.btn.btn-danger(type="button" aria-label="Left Align" href="/form/hapus/#{row.nim}") Hapus
			
			