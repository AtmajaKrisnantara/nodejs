extends layout

block content
	nav.navbar.navbar-expand-lg.navbar-light.fixed-top#mainNav
		.container
			a.navbar-brand.js-scroll-trigger(href="#page-top") Start Bootstrap 
				button.navbar-toggler.navbar-toggler-right(type="button",data-toggle="collapse",data-target="#navbarResponsive",aria-controls="navbarResponsive",aria-expanded="false",aria-label="Toggle navigation")
				| Menu
			i.fas.fa-bars
				.collapse.navbar-collapse#navbarResponsive
					ul.navbar-nav.ml-auto
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/") Home
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/data") Mahasiswa
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/datamakul") Mata Kuliah	
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/form") Form Mahasiswa
						li.nav-item
							a.nav-link.js-scroll-trigger(href="/formmakul") Form Mata Kuliah
	header.masthead
		.container.d-flex.h-100.align-items-center
			.mx-auto.text-center
				h1.mx-auto.my-0.text-uppercase Data Mata Kuliah
	main.container(role="main")
		.mt-3
			h1 Halaman Data Mata Kuliah
			a.btn.btn-success(type="button" aria-label="Left Align" href="/formmakul") Tambah
			br
			br
			table.table.table-bordered
				tr 
						th No
						th kode Mata Kuliah
						th Nama mata Kuliah
						th Jumlah SKS
						th Semester
				for row, index in data
					tr
					td #{index+1}
					td #{row.kode_makul}
					td #{row.nama_makul}
					td #{row.jml_sks}
					td #{row.semester}